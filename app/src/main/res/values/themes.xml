<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Application Theme -->
    <style name="Theme.AuraFrameFX.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Color Palette -->
        <item name="colorPrimary">@color/neon_teal</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/neon_blue</item> <!-- Adjusted, can be different -->
        <item name="colorOnPrimaryContainer">@color/on_primary</item> <!-- Adjusted -->

        <item name="colorSecondary">@color/neon_purple</item>
        <item name="colorOnSecondary">@color/on_surface</item> <!-- Adjusted, was on_primary -->
        <item name="colorSecondaryContainer">@color/neon_purple</item> <!-- Adjusted -->
        <item name="colorOnSecondaryContainer">@color/on_surface</item> <!-- Adjusted -->

        <item name="colorTertiary">@color/neon_blue</item>
        <item name="colorOnTertiary">@color/on_surface</item> <!-- Adjusted, was on_primary -->
        <item name="colorTertiaryContainer">@color/neon_blue</item> <!-- Adjusted -->
        <item name="colorOnTertiaryContainer">@color/on_surface</item> <!-- Adjusted -->

        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/on_surface</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_surface</item> <!-- Adjusted, was on_primary -->
        <item name="colorErrorContainer">@color/error</item> <!-- Adjusted -->
        <item name="colorOnErrorContainer">@color/on_surface</item> <!-- Adjusted -->

        <!-- System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Assuming dark background means light text/icons -->
        <item name="android:windowLightNavigationBar">false</item> <!-- Assuming dark background means light icons -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item> <!-- Example -->

        <!-- Shape Appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AuraFrameFX.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AuraFrameFX.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AuraFrameFX.LargeComponent</item>

        <!-- Text Appearances -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.AuraFrameFX.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.AuraFrameFX.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.AuraFrameFX.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.AuraFrameFX.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.AuraFrameFX.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.AuraFrameFX.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.AuraFrameFX.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AuraFrameFX.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.AuraFrameFX.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.AuraFrameFX.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AuraFrameFX.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.AuraFrameFX.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.AuraFrameFX.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.AuraFrameFX.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.AuraFrameFX.LabelSmall</item>
        
        <!-- Default Widget Styles -->
        <item name="materialButtonStyle">@style/Widget.AuraFrameFX.Button</item>
        <item name="materialCardViewStyle">@style/Widget.AuraFrameFX.CardView</item>
        <!-- Add other default widget styles here -->

    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.AuraFrameFX.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item> <!-- Changed from mipmap for consistency with adaptive icon structure -->
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- Increased duration -->
        <item name="postSplashScreenTheme">@style/Theme.AuraFrameFX.Material3</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.AuraFrameFX.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/neon_teal</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">16dp</item> <!-- Example: more rounded corners -->
    </style>

    <style name="Widget.AuraFrameFX.CardView" parent="Widget.Material3.CardView.Elevated"> <!-- Example: using Elevated variant -->
        <item name="cardBackgroundColor">@color/surface_variant</item> <!-- Slightly different from main surface -->
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item> <!-- Example: more rounded corners -->
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.AuraFrameFX.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- Example adjustment -->
    </style>

    <style name="ShapeAppearance.AuraFrameFX.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- Example adjustment -->
    </style>

    <style name="ShapeAppearance.AuraFrameFX.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Example adjustment -->
    </style>

</resources>
